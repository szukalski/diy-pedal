{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/szukalski/diy-pedal/raw/main/schema/pedal-component.schema.json",
    "title": "Pedal Component",
    "description": "A component for a guitar pedal.",
    "type": "object",
    "properties": {
        "component": {
            "type": "object",
            "properties": {
                "category": {
                    "description": "Category of the component",
                    "type": "string"
                },
                "sub-category": {
                    "description": "Sub-category of the component",
                    "type": "string"
                },
                "location": {
                    "description": "Location ID(s) of the component on the PCB",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true
                },
                "quantity": {
                    "description": "Quantity of component",
                    "type": "number"
                },
                "value": {
                    "description": "Value of the component",
                    "type": "string"
                },
                "package": {
                    "description": "Package of the component",
                    "type": "string"
                },
                "description": {
                    "description": "Description of the component",
                    "type": "string"
                },
                "replacement-value": {
                    "description": "Potential replacement values",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true
                },
                "notes": {
                    "description": "Additional notes of the component",
                    "type": "string"
                }
            },
            "required": [ "category", "value", "quantity" ]
        }
    },
    
    "$defs": {
        "component": {
            "type": "object",
            "properties": {
                "category": {
                    "description": "Category of the component",
                    "type": "string"
                },
                "value": {
                    "description": "Value of the component",
                    "type": "string"
                },
                "quantity": {
                    "description": "Quantity of component",
                    "type": "number"
                }
            },
            "required": [ "category", "value", "quantity" ]
        }
    }
}