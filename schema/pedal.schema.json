{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/szukalski/diy-pedal/raw/main/schema/pedal.schema.json",
    "title": "Pedal",
    "description": "A guitar pedal that you can build.",
    "type": "object",
    "properties": {
        "pedalName": {
            "description": "The name of the pedal",
            "type": "string"
        },
        "pedalDesigner": {
            "description": "Who designed the pedal",
            "type": "string"
        },
        "pedalType": {
            "description": "The type of pedal",
            "type": "array",
            "items": {
                "enum": [ "boost", "chorus", "compression", "delay", "distortion", "dynamics", "eq", "filter", "flange", "fuzz", "modulation", "overdrive", "phase", "pitch", "preamp", "reverb", "tremolo", "utility", "wah" ]
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "relatedTo": {
            "description": "What other pedals the pedal is related to",
            "type": "string"
        },
        "construction": {
            "description": "The construction method to build the pedal",
            "enum": [ "pcb", "perfboard", "vero" ]
        },
        "schematic": {
            "description": "Is schematic present?",
            "type": "boolean"
        },
        "buildDoc": {
            "description": "Is build doc present?",
            "type": "boolean"
        },
        "tags": {
            "description": "Tags for the pedal",
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "components": {
            "type": "object",
            "$ref": "#/$defs/component",
            "properties": {
                "capacitors": {
                    "type": "object",
                    "properties": {
                        "category": {
                            "enum": [ "Ceramic", "Electrolytic", "Film", "Tantalum" ]
                        }
                    }
                },
                "diodes": {
                    "type": "object",
                    "properties": {
                        "category": {
                            "enum": [ "Germanium", "LED", "Schottky", "Silicon", "Zener" ]
                        }
                    }
                },
                "integrated-circuits": {
                    "type": "object",
                    "properties": {}
                },
                "hardware": {
                    "type": "object",
                    "properties": {
                        "category": {
                            "enum": [ "Audio Jack", "Bezel", "DC Jack", "Enclosure", "Knob", "Wire" ]
                        }
                    }
                },
                "other": {
                    "type": "object",
                    "properties": {}
                },
                "potentiometers": {
                    "type": "object",
                    "properties": {
                        "category": {
                            "enum": [ "A-Log", "B-Linear", "C-Reverse Log", "W-Taper", "Trimpot" ]
                        }
                    }
                },
                "resistors": {
                    "type": "object",
                    "properties": {}
                },
                "sockets": {
                    "type": "object",
                    "properties": {
                        "category": {
                            "enum": [ "SIP-1", "DIP-8", "DIP-14", "DIP-16" ]
                        }
                    }
                },
                "switches": {
                    "type": "object",
                    "properties": {
                        "category": {
                            "enum": [ "Footswitch", "Rotary", "Toggle" ]
                        }
                    }
                },
                "transistors": {
                    "type": "object",
                    "properties": {}
                }
            },
            "unevaluatedProperties": false,
            "required": [ "value", "quantity" ]
        }
    },
    "required": [ "pedalName", "pedalDesigner", "pedalType" ],
    "$defs": {
        "component": {
            "type": "object",
            "properties": {
                "category": {
                    "description": "Category of the component"
                },
                "sub-category": {
                    "description": "Sub-category of the component"
                },
                "location": {
                    "description": "Location ID(s) of the component on the PCB",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true
                },
                "value": {
                    "description": "Value of the component",
                    "type": "string"
                },
                "quantity": {
                    "description": "Quantity of component",
                    "type": "number"
                },
                "package": {
                    "description": "Package of the component",
                    "type": "string"
                },
                "description": {
                    "description": "Description of the component",
                    "type": "string"
                },
                "replacement": {
                    "description": "Potential replacement values",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true
                },
                "notes": {
                    "description": "Additional notes of the component",
                    "type": "string"
                }
            }
        }
    }
  }