{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/szukalski/diy-pedal/raw/main/schema/pedal.schema.json",
    "title": "Pedal",
    "description": "A guitar pedal that you can build.",
    "type": "object",
    "properties": {
        "pedalName": {
            "description": "The name of the pedal",
            "type": "string"
        },
        "pedalDesigner": {
            "description": "Who designed the pedal",
            "type": "string"
        },
        "pedalType": {
            "description": "The type of pedal",
            "type": "array",
            "items": {
                "enum": [ "boost", "chorus", "compression", "delay", "distortion", "dynamics", "eq", "filter", "flange", "fuzz", "modulation", "overdrive", "other", "phase", "pitch", "preamp", "reverb", "tremolo", "utility", "wah" ]
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "basedOn": {
            "description": "What other pedals the pedal is based on",
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "construction": {
            "description": "The construction method to build the pedal",
            "enum": [ "pcb", "perfboard", "vero" ]
        },
        "schematic": {
            "description": "Is schematic present?",
            "type": "boolean"
        },
        "buildDoc": {
            "description": "Is build doc present?",
            "type": "boolean"
        },
        "tags": {
            "description": "Tags for the pedal",
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "components": {
            "description": "Components to build the pedal",
            "type": "array",
            "items": {
              "$ref": "https://github.com/szukalski/diy-pedal/raw/main/schema/pedal-component.schema.json"
            },
            "minItems": 1
        }
    },
    "required": [ "pedalName", "pedalDesigner", "pedalType" ]
  }