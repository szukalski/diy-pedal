{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/szukalski/diy-pedal/raw/main/schemas/pedal-bom.schema.json",
  "title": "Bill of Materials",
  "description": "A BOM for one or more pedals.",
  "type": "object",
  "unevaluatedProperties": false,
  "properties": {
    "bom": {
      "type": "array",
      "items": {
        "buildName": {
          "description": "Name for the build, individual or All",
          "type": "string"
        },
        "category": {"$ref": "https://github.com/szukalski/diy-pedal/raw/main/schemas/pedal-components.schema.json#/properties/components/category"},
        "sub-category": {"$ref": "https://github.com/szukalski/diy-pedal/raw/main/schemas/pedal-components.schema.json#/properties/components/sub-category"},
        "value": {"$ref": "https://github.com/szukalski/diy-pedal/raw/main/schemas/pedal-components.schema.json#/properties/components/value"},
        "quantity": {"$ref": "https://github.com/szukalski/diy-pedal/raw/main/schemas/pedal-components.schema.json#/properties/components/quantity"}
      }
    }
  },
  "required": [ "bom" ]
}

